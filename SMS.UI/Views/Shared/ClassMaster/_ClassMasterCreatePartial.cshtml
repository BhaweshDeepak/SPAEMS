@model SMS.Contract.Setting.ClassMasterVm
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Create Institute Detail</h3>

            </div>
            @using(Ajax.BeginForm("PostClassEdit","ClassMaster",null,new AjaxOptions
            {
                HttpMethod = "Post",
                OnSuccess = "classCreated",
                OnBegin="loadingBegin",
                OnComplete="loadingComplete",
                OnFailure = "failureMessage"
            },null))
            {
                <div class="box-body">
                    <div class="form-group col-md-6">
                        <label for="exampleInputEmail1">Class Name</label>
                        
                        @Html.TextBoxFor(model => model.Name,new { @class = "form-control",placeholder = "Enter class name" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                    <div class="form-group col-md-6">
                        <label for="exampleInputEmail1">Class Code</label>
                        @Html.TextBoxFor(model => model.Code,new { @class = "form-control",placeholder = "Enter class name" })
                        @Html.ValidationMessageFor(model => model.Code)
                    </div>
                </div>
                <div class="box-footer">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-primary pull-left" value="Save" />
                        <button type="reset" class="btn btn-danger pull-Left">Cancel</button>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    function classCreated(response) {
        SuccessMessage("Success", response);
        GetClassMasterList();
    }
    function loadingBegin() {
        $("#loadingImage").show();
    }
    function loadingComplete() {
        $("#loadingImage").hide();
    }
</script>
