@model IEnumerable<SMS.Contract.Setting.AcademicMasterVm>
@using SMS.UI.ExtensionAndHelpers

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Academic Master  List</h3>
                <button onclick="AddAcademicMaster()" class="btn btn-primary a-btn-slide-text pull-right">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    <span><strong>Add Academic Master</strong></span>
                </button>
            </div>
            <table class="table table-condensed table-striped table-hover" id="tbAcademicMasterList">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>

                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EndDate)
                        </th>

                        <th>
                            Action Name
                        </th>
                    </tr>
                </thead>

                <tbody>


                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @SPADateExtension.DateFormatt(item.StartDate)
                            </td>
                            <td>
                                @SPADateExtension.DateFormatt(item.EndDate)
                            </td>

                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" onclick="EditAcademic(@item.Id)"><span class="glyphicon glyphicon-pencil"></span></button></p>
                                <p data-placement="top" data-toggle="tooltip" title="Delete"><button onclick="DeleteAcademic(@item.Id)" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button></p>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
<script>
        $(document).ready(function () {
        $("#tbAcademicMasterList").dataTable({
            "paging": true,
            "ordering": true,
            "info": true,
            "searching": true,
            "pagingType": "full_numbers",
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
        });
    });
</script>