@model SMS.Contract.Setting.SectionMasterVM
<script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>


<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Create Institute Detail</h3>

            </div>
            @using(Ajax.BeginForm("CreateSection","SectionMaster",null,new AjaxOptions
            {
                HttpMethod = "Post",
                OnSuccess = "onClassCreation",
                OnBegin = "loadingBegin",
                OnComplete = "loadingComplete",
                OnFailure = "failureMessage"
            },null))
            {
                <div class="box-body">


                    <div class="form-group col-md-6">
                        <label for="exampleInputEmail1">Class Name</label>
                        @Html.DropDownListFor(model => model.ClassId,new SelectList(ViewBag.ClassMasterList,"Id","Name"),"Select Class Name",new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ClassId,"",new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="exampleInputEmail1">Section Name</label>
                        @Html.TextBoxFor(model => model.Name,new { @class = "form-control",placeholder = "Enter class name" })
                        @Html.ValidationMessageFor(model => model.Name,"", new {@class="text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="exampleInputEmail1">Section Code</label>
                        @Html.TextBoxFor(model => model.Code,new { @class = "form-control",placeholder = "Enter class name" })
                        @Html.ValidationMessageFor(model => model.Code,"",new { @class = "text-danger" })
                    </div>
                </div>
                <div class="box-footer">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-primary pull-right" value="Save" />
                        <button type="reset" class="btn btn-danger pull-Left">Cancel</button>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function onClassCreation(response) {
        SuccessMessage("Success", response);
        GetSectionList();
    }
    function failureMessage(response) {
        SuccessMessage("Success", response);
    }
    function loadingComplete() {

    }
    function loadingBegin() {

    }
</script>
