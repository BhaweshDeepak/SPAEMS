@model IEnumerable<SMS.Contract.StudentFinance.FeeHeadMasterVM>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HeadName)
            </th>
            <th>
                Amount
            </th>
            <th>
                Discount Amount
            </th>
            <th>
                Discount Percentage
            </th>
            <th>
                Payment Type
            </th>
            <th>
                Net Payable Amount
            </th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HeadName)
                </td>
                <td>

                    <input type="hidden" name="txtFeeHeadId" value="@item.Id" />
                    <input type="number" name="txtAmount" id="txtAmount" value="@item.Amount" class="form-control" />
                </td>
                <td>
                    <input type="number" name="txtDiscountAmnt" id="txtAmount" value="@item.DiscountAmount" class="form-control" />
                </td>
                <td>
                    <input type="number" name="txtDiscountPer" id="txtAmount" value="@item.DiscountPercenatge" class="form-control" />
                </td>
                <td>
                    @Html.DropDownList("ddlPaymentType",new SelectList(ViewBag.FeeType,"FeeTypeId","FeeTypeName",item.FeeType), new {@class="form-control" })
                </td>
                <td>
                    @item.NetAmount
                </td>
            </tr>
        }

    </table>


