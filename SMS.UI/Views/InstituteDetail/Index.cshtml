@model SMS.Contract.InstitueDetail

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SMSLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Institute Detail
            <small>Create Institute Detail</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content container-fluid">
        <section class="content">
          
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Create Institute Detail</h3>
                        </div>
                        @using(Ajax.BeginForm("CreateInstitute","InstituteDetail",null,new AjaxOptions
                {
                    HttpMethod = "Post",
                    OnBegin = "beginRequest",
                    OnComplete = "completeRequest",
                    OnSuccess = "successMessage",
                    OnFailure = "failureMessage"


                },new { enctype = "multipart/form-data" }))
                {
                    <div class="box-body">
                        <div class="form-group col-md-6">
                            <label for="exampleInputEmail1">Institute Name</label>

                            @Html.TextBoxFor(model => model.Name,new { @class = "form-control",placeholder = "Enter institute name" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputEmail1">Institute address</label>
                            @Html.TextBoxFor(model => model.Address,new { @class = "form-control",placeholder = "Enter institute address" })
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputEmail1">Institute Email</label>
                            @Html.TextBoxFor(model => model.EmailAddress,new { @class = "form-control",placeholder = "Enter Email Address" })
                            @Html.ValidationMessageFor(model => model.EmailAddress)
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputEmail1">Institute Phone</label>
                            @Html.TextBoxFor(model => model.Phone,new { @class = "form-control",placeholder = "Enter Phone" })
                            @Html.ValidationMessageFor(model => model.Phone)
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputEmail1">Institute Mobile</label>
                            @Html.TextBoxFor(model => model.Mobile,new { @class = "form-control",placeholder = "Enter Mobile" })
                            @Html.ValidationMessageFor(model => model.Mobile)
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputEmail1">Admin Contact Person</label>
                            @Html.TextBoxFor(model => model.AdminContactPersonName,new { @class = "form-control",placeholder = "Enter Admin Name" })
                            @Html.ValidationMessageFor(model => model.AdminContactPersonName)
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputEmail1">Institute Code</label>
                            @Html.TextBoxFor(model => model.InstituteCode,new { @class = "form-control",placeholder = "Enter Institute Code" })
                            @Html.ValidationMessageFor(model => model.InstituteCode)
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputEmail1">Institute Logo</label>
                            @Html.TextBoxFor(model => model.InstituteImage,new { @class = "form-control",placeholder = "Enter Admin Phone",type = "file" })

                        </div>
                        <div class="form-group col-md-6">
                            <div id="dvPreview">
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <input type="submit" class="btn btn-primary" value="Save" />
                        <button type="reset" class="btn btn-danger pull-Left">Cancel</button>
                    </div>
        }
                    </div>
                </div>
            </div>
        </section>
    </section>
    <script src="~/Scripts/Custom/Custome.js"></script>
</div>