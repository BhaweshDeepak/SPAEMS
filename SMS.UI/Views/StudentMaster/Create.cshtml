@model SMS.Contract.StudentMaster.StudentMasterVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_SMSLayout.cshtml";
}
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            StudentMaster Detail
            <small>Create Student Master Detail</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
        <button class="btn btn-primary pull-right" onclick="GetStudentList()">Get Student List</button>
    </section>
    <!-- Main content -->
    <section class="content container-fluid">
        <section class="content">

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Create Student Master Detail</h3>
                        </div>
                        @using(Ajax.BeginForm("Create","StudentMaster",null,new AjaxOptions
                        {
                            HttpMethod = "Post",
                            OnBegin = "beginRequest",
                            OnComplete = "completeRequest",
                            OnSuccess = "successMessage",
                            OnFailure = "failureMessage"


                        },new { enctype = "multipart/form-data" }))
                        {
                            <div class="box-body">
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Student Name</label>

                                    @Html.TextBoxFor(model => model.Name,new { @class = "form-control",placeholder = "Enter Student name" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Father Name</label>
                                    @Html.TextBoxFor(model => model.FatherName,new { @class = "form-control",placeholder = "Enter Father Name" })
                                    @Html.ValidationMessageFor(model => model.FatherName)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Mother Name</label>
                                    @Html.TextBoxFor(model => model.MotherName,new { @class = "form-control",placeholder = "Enter Mother Name" })
                                    @Html.ValidationMessageFor(model => model.MotherName)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Registration Number</label>
                                    @Html.TextBoxFor(model => model.RegistrationNumber,new { @class = "form-control",placeholder = "Enter Registration" })
                                    @Html.ValidationMessageFor(model => model.RegistrationNumber)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Roll Number</label>
                                    @Html.TextBoxFor(model => model.RollNumber,new { @class = "form-control",placeholder = "Enter Roll Number" })
                                    @Html.ValidationMessageFor(model => model.RollNumber)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Date of Birth</label>
                                    @Html.TextBoxFor(model => model.DateOfBirth,new { @class = "form-control",type = "date" })
                                    @Html.ValidationMessageFor(model => model.DateOfBirth)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Select Gender</label>
                                    @Html.DropDownListFor(model => model.GenderId,new SelectList(ViewBag.GenderMaster,"Id","Name"),"Select Gender",new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.GenderId)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Blood Group</label>
                                    @Html.DropDownListFor(model => model.BloodGroup,new SelectList(ViewBag.BloodGroup,"Id","Name"),"Select Blood Group",new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.BloodGroup)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Category</label>
                                    @Html.TextBoxFor(model => model.CategoryId,new { @class = "form-control",placeholder = "Enter Admin Phone" })
                                    @Html.ValidationMessageFor(model => model.CategoryId)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Caste</label>
                                    @Html.DropDownListFor(model => model.CastId,new SelectList(ViewBag.Caste,"Id","Name"),"Select Caste ",new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CastId)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Religion</label>
                                    @Html.DropDownListFor(model => model.CastId,new SelectList(ViewBag.Religion,"Id","Name"),"Select Religion ",new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ReligionId)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Aadhar Card</label>
                                    @Html.TextBoxFor(model => model.AdharCardNumber,new { @class = "form-control",placeholder = "Enter Aadhar card number" })
                                    @Html.ValidationMessageFor(model => model.AdharCardNumber)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Father Phone</label>
                                    @Html.TextBoxFor(model => model.FatherPhone,new { @class = "form-control",placeholder = "Enter Father Phone" })
                                    @Html.ValidationMessageFor(model => Model.FatherPhone)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Emergency Phone</label>
                                    @Html.TextBoxFor(model => model.ContactPhone,new { @class = "form-control",placeholder = "Enter Emergency Phone" })
                                    @Html.ValidationMessageFor(model => Model.ContactPhone)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Address</label>
                                    @Html.TextAreaFor(model => model.Adddress,new { @class = "form-control",placeholder = "Enter Student Address" })
                                    @Html.ValidationMessageFor(model => Model.Adddress)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Email Id</label>
                                    @Html.TextBoxFor(model => model.EmailId,new { @class = "form-control",placeholder = "Enter Email Id" })
                                    @Html.ValidationMessageFor(model => Model.EmailId)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Course/Class Name</label>
                                    @Html.DropDownListFor(model => model.ClassId,new SelectList(ViewBag.ClassMaster,"Id","Name"),"Select Class",new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => Model.ClassId)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Section/Batch Name</label>
                                    @Html.DropDownListFor(model => model.SectionId,new SelectList(ViewBag.SectionMaster,"Id","Name"),"Select Section",new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => Model.SectionId)
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="exampleInputEmail1">Academic Year </label>
                                    @Html.DropDownListFor(model => model.AcademicYear,new SelectList(ViewBag.SectionMaster,"Id","Name"),"Select Section",new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => Model.AcademicYear)
                                </div>
                            </div>
                            <div class="box-footer">
                                <input type="submit" class="btn btn-primary" value="Save" />
                                <button type="reset" class="btn btn-danger pull-Left">Cancel</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
    </section>

    <div id="divStudentModal" class="modal fade fa-align-center" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content  modal-lg">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-center">Student List</h4>
                </div>
                <div class="modal-body" id="_divStudentList">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <script src="~/Scripts/Custom/Custome.js"></script>
</div>

<script type="text/javascript">
    function GetStudentList() {
        $.get("/StudentMaster/Index", function (response) {
            $("#_divStudentList").html(response);
            $("#divStudentModal").modal('show');
        })
    }
</script>

